<%= form_with(model: @room, local: true) do |form| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= @room.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="name">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>
  <div class="rent">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>
  </div>
  <div class="address">
    <%= form.label :住所 %>
    <%= form.text_field :address %>
  </div>
  <div class="age">
    <%= form.label :築年数 %>
    <%= form.text_field :age %>
  </div>
  <div class="note">
    <%= form.label :備考 %>
    <%= form.text_field :note %>
  </div>

  <%= form.fields_for :stations do |stations_form| %>
  <h3>最寄り駅</h3>
    <div>
      <%= stations_form.label :路線 %>
      <%= stations_form.text_field :line %>
    </div>
    <div>
      <%= stations_form.label :駅名 %>
      <%= stations_form.text_field :station %>
    </div>
    <div>
      <%= stations_form.label :徒歩 %>
      <%= stations_form.text_field :on_foot %>
    </div>
  <% end %>
  <div class="actions"><%= form.submit %></div>
<% end %>
