<%= form_with(model: @room, local: true) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= @room.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <p><%= f.label '物件名' %></p>
    <p><%= f.text_field :name %></p>
    <p><%= f.label '賃料' %></p>
    <p><%= f.text_field :rent %>円</p>
    <p><%= f.label '住所' %></p>
    <p><%= f.text_field :address %></p>
    <p><%= f.label '築年数' %></p>
    <p><%= f.text_field :age %>年</p>
    <p><%= f.label '備考' %></p>
    <p><%= f.text_area :note %></p>
  </div>
    <hr>
  <% n = 0 %>
  <%= f.fields_for :stations do |f|%>
    <h3>最寄り駅<%= n += 1%></h3>
    <p><%= f.label '路線' %></p>
    <p><%= f.text_field :line %></p>
    <p><%= f.label '駅名' %></p>
    <p><%= f.text_field :station %></p>
    <p><%= f.label '徒歩' %></p>
    <p><%= f.text_field :on_foot %>分</p>
  <% end %>
  <div class="actions"><%= f.submit %></div>
  <%= link_to 'Back', rooms_path %>
<% end %>
